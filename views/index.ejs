<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="../stylesheets/register.css">

</head>
<body>
  <div class="loginBox">
    <img src="../images/uploads/default.png" alt="" class="user">
    <h2>Register here</h2>
    <form action="/register" method="post">
      <p>Username</p>
      <input type="text" name="username" id="userinp" placeholder="username">
      <p>Email</p>
      <input type="email" name="email" id="" placeholder="email">
      <p>Number</p>
      <input type="number" name="number" id="" placeholder="number">
      <p>password</p>
      <input type="password" name="password" id="" placeholder="password">
      <input type="submit" name="" id="">

    </form>
    <small><i>if already register</i></small><a href="/loginform"><button class="loginbtn">Login</button></a>

  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js" integrity="sha512-uMtXmF28A2Ab/JJO2t/vYhlaa/3ahUOgj1Zf27M5rOo8/+fcTUVH0/E0ll68njmjrLqOBjXM3V9NiPFL5ywWPQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script>
   var inputid= document.querySelector("#userinp");
   inputid.addEventListener("input",function(){
     var user= inputid.value;
     axios.get(`/username/${user}`).then(function(data){
      if(data.data.found){
        console.log(data.data);
        inputid.style.outlineColor="red";
      }
      else{
        inputid.style.outlineColor="black";
      }
     });
    })
  </script>
  
</body>
</html>